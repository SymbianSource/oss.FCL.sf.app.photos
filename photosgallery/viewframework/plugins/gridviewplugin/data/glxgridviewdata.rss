              {
              type = EAknCtButton;
              id = EGlxCmdStartMultipleMarking;
              control = AVKON_BUTTON
                  {
                  flags = 0;
                  states =
                      {
                      AVKON_BUTTON_STATE
                          {
                          bmpfile = "z:\\Resource\\apps\\glxicons.mif";
                          bmpid = EMbmGlxiconsQgn_indi_cam4_tb_mark; 
                          bmpmask = EMbmGlxiconsQgn_indi_cam4_tb_mark_mask;
